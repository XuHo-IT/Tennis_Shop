@{
    ViewData["Title"] = "About Us";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="text-center mb-5">
                    <h1 class="section-title text-uppercase mb-3">About TennisShop</h1>
                    <p class="text-muted fs-5">Your Premier Destination for Tennis Equipment</p>
                </div>

                <div class="card border-0 shadow-lg mb-5">
                    <div class="card-body p-5">
                        <h3 class="text-uppercase mb-4">Our Story</h3>
                        <p class="lh-lg text-muted mb-4">
                            TennisShop was founded with a simple mission: to provide tennis players of all levels with access to premium equipment and expert guidance. 
                            Whether you're just starting your tennis journey or you're a seasoned professional, we have the perfect gear to elevate your game.
                        </p>
                        <p class="lh-lg text-muted mb-4">
                            Our carefully curated collection includes the latest rackets, shoes, apparel, and accessories from the world's leading tennis brands. 
                            We pride ourselves on offering not just products, but a complete tennis experience backed by knowledge and passion for the sport.
                        </p>
                    </div>
                </div>

                <div class="row g-4 mb-5">
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100 text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-medal fa-3x text-primary"></i>
                            </div>
                            <h5 class="text-uppercase mb-3">Premium Quality</h5>
                            <p class="text-muted">Only the finest tennis equipment from trusted brands worldwide</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100 text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-users fa-3x text-primary"></i>
                            </div>
                            <h5 class="text-uppercase mb-3">Expert Support</h5>
                            <p class="text-muted">Our team of tennis enthusiasts ready to help you find the perfect gear</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100 text-center p-4">
                            <div class="mb-3">
                                <i class="fas fa-shipping-fast fa-3x text-primary"></i>
                            </div>
                            <h5 class="text-uppercase mb-3">Fast Delivery</h5>
                            <p class="text-muted">Quick and reliable shipping to get you on the court faster</p>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-lg bg-dark text-white">
                    <div class="card-body p-5 text-center">
                        <h3 class="text-uppercase mb-4">Why Choose TennisShop?</h3>
                        <div class="row">
                            <div class="col-md-3">
                                <h4 class="text-primary mb-2">10K+</h4>
                                <p class="mb-0">Happy Customers</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-primary mb-2">500+</h4>
                                <p class="mb-0">Products Available</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-primary mb-2">50+</h4>
                                <p class="mb-0">Top Brands</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-primary mb-2">5 Years</h4>
                                <p class="mb-0">In Business</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
