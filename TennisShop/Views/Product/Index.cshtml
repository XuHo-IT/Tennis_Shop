@model IEnumerable<DataAccessLayer.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<section class="py-5">
    <div class="container">
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-5">
            <h2 class="text-uppercase">Our Products</h2>
            @if (User.IsInRole("admin"))
            {
                <a asp-action="Create" class="btn btn-dark text-uppercase">Add New Product</a>
            }
        </div>

        <!-- Search Form -->
        <form asp-action="Search" method="get" class="mb-5">
            <div class="row">
                <div class="col-md-8">
                    <input type="text" name="searchTerm" class="form-control form-control-lg" placeholder="Search products..." value="@ViewBag.SearchTerm" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-dark btn-lg w-100">Search</button>
                </div>
            </div>
        </form>

        <!-- Products Grid -->
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="product-item image-zoom-effect link-effect">
                        <div class="image-holder position-relative">
                            <a asp-action="Details" asp-route-id="@product.Id">
                                @if (product.ProductImages.Any())
                                {
                                    <img src="@product.ProductImages.First().ImageUrl" alt="@product.Name" class="product-image img-fluid">
                                }
                                else
                                {
                                    <img src="~/images/img@((product.Id % 7) + 1).jpg" alt="@product.Name" class="product-image img-fluid">
                                }
                            </a>
                            <a href="#" class="btn-icon btn-wishlist">
                                <svg width="24" height="24" viewBox="0 0 24 24">
                                    <use xlink:href="#heart"></use>
                                </svg>
                            </a>
                            <div class="product-content">
                                <h5 class="element-title text-uppercase fs-5 mt-3">
                                    <a asp-action="Details" asp-route-id="@product.Id">@product.Name</a>
                                </h5>
                                <p class="text-muted">@(product.Description?.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)</p>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="h5 text-primary">$@product.BasePrice.ToString("F2")</span>
                                    @if (product.DiscountPercent > 0)
                                    {
                                        <span class="badge bg-success">@product.DiscountPercent% OFF</span>
                                    }
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">Stock: @product.Stock</small>
                                    @if (User.IsInRole("admin"))
                                    {
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-dark btn-sm">View</a>
                                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-dark btn-sm">View Details</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <svg width="64" height="64" viewBox="0 0 24 24" class="text-muted">
                        <use xlink:href="#cart"></use>
                    </svg>
                </div>
                <h4 class="text-muted">No products found</h4>
                <p class="text-muted">Try adjusting your search criteria or add a new product.</p>
                @if (User.IsInRole("admin"))
                {
                    <a asp-action="Create" class="btn btn-dark text-uppercase mt-3">Add First Product</a>
                }
            </div>
        }
    </div>
</section>

<section class="wishlist py-5 bg-light">
    <div class="container">
        <div class="d-flex flex-wrap justify-content-between align-items-center mt-5 mb-3">
            <h4 class="text-uppercase">Featured Wishlist Items</h4>
            <a href="#" class="btn-link">View All</a>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="wishlist-item">
                    <div class="image-holder">
                        <img src="~/images/img1.jpg" alt="Tennis Racket" class="img-fluid">
                    </div>
                    <div class="wishlist-content">
                        <h5 class="wishlist-title">Professional Tennis Racket</h5>
                        <p class="wishlist-price">$299.99</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="wishlist-item">
                    <div class="image-holder">
                        <img src="~/images/img2.jpg" alt="Tennis Shoes" class="img-fluid">
                    </div>
                    <div class="wishlist-content">
                        <h5 class="wishlist-title">Premium Tennis Shoes</h5>
                        <p class="wishlist-price">$149.99</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="wishlist-item">
                    <div class="image-holder">
                        <img src="~/images/img3.jpg" alt="Tennis Accessories" class="img-fluid">
                    </div>
                    <div class="wishlist-content">
                        <h5 class="wishlist-title">Tennis Accessories Set</h5>
                        <p class="wishlist-price">$79.99</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
