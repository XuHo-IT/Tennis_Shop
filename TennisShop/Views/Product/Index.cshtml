@model IEnumerable<BussinessObject.Product>

@{
    ViewData["Title"] = "Products";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <h1 class="section-title text-uppercase mb-3">Tennis Equipment Collection</h1>
            <p class="text-muted">Discover our complete range of professional tennis equipment</p>
        </div>

        <!-- Search Form -->
        <div class="row justify-content-center mb-5" data-aos="fade-up" data-aos-delay="200">
            <div class="col-md-8 col-lg-6">
                <form asp-action="Search" method="get">
                    <input type="hidden" name="sortBy" value="@ViewBag.SortBy" />
                    <div class="input-group input-group-lg shadow-sm">
                        <input type="text" name="searchTerm" class="form-control border-0" placeholder="Search for rackets, shoes, accessories..." value="@ViewBag.SearchTerm" />
                        <button type="submit" class="btn btn-dark text-uppercase">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="white">
                                <use xlink:href="#search"></use>
                            </svg>
                            Search
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Category Navigation and Sort -->
        <div class="row mb-4" data-aos="fade-up" data-aos-delay="250">
            <div class="col-md-8">
                @if (ViewBag.Categories != null)
                {
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-action="Index" asp-route-categoryId="" asp-route-sortBy="@ViewBag.SortBy"
                           class="btn @(ViewBag.SelectedCategoryId == null ? "btn-dark" : "btn-outline-dark") text-uppercase">
                            All Products
                        </a>
                        @foreach (var category in ViewBag.Categories as IEnumerable<BussinessObject.ProductCategory>)
                        {
                            <a asp-action="Index" asp-route-categoryId="@category.Id" asp-route-sortBy="@ViewBag.SortBy"
                               class="btn @(ViewBag.SelectedCategoryId != null && (int)ViewBag.SelectedCategoryId == category.Id ? "btn-dark" : "btn-outline-dark") text-uppercase">
                                @category.Name
                            </a>
                        }
                    </div>
                }
            </div>
            <div class="col-md-4">
                <div class="d-flex justify-content-end">
                    <label for="sortBy" class="form-label me-2 align-self-center mb-0 text-uppercase fw-bold">Sort By:</label>
                    @{
                        var currentSort = ViewBag.SortBy?.ToString() ?? "newest";
                    }
                    <select id="sortBy" name="sortBy" class="form-select" style="max-width: 200px;" onchange="sortProducts(this.value)">
                        @if (currentSort == "newest")
                        {
                            <option value="newest" selected>Newest</option>
                        }
                        else
                        {
                            <option value="newest">Newest</option>
                        }
                        @if (currentSort == "oldest")
                        {
                            <option value="oldest" selected>Oldest</option>
                        }
                        else
                        {
                            <option value="oldest">Oldest</option>
                        }
                        @if (currentSort == "pricelow")
                        {
                            <option value="pricelow" selected>Price: Low to High</option>
                        }
                        else
                        {
                            <option value="pricelow">Price: Low to High</option>
                        }
                        @if (currentSort == "pricehigh")
                        {
                            <option value="pricehigh" selected>Price: High to Low</option>
                        }
                        else
                        {
                            <option value="pricehigh">Price: High to Low</option>
                        }
                        @if (currentSort == "nameaz")
                        {
                            <option value="nameaz" selected>Name: A to Z</option>
                        }
                        else
                        {
                            <option value="nameaz">Name: A to Z</option>
                        }
                        @if (currentSort == "nameza")
                        {
                            <option value="nameza" selected>Name: Z to A</option>
                        }
                        else
                        {
                            <option value="nameza">Name: Z to A</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="text-end mb-4">
                <a asp-action="Create" class="btn btn-outline-dark text-uppercase">
                    <i class="fas fa-plus"></i> Add New Product
                </a>
            </div>
        }

        <!-- Products Grid -->
        <div class="row g-4" data-aos="fade-up" data-aos-delay="300">
            @foreach (var product in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="product-item image-zoom-effect link-effect h-100">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="image-holder position-relative">
                                <a asp-action="Details" asp-route-id="@product.Id">
                                    @if (product.ProductImages.Any())
                                    {
                                        <img src="@product.ProductImages.First().ImageUrl" alt="@product.Name" class="product-image img-fluid rounded-top" style="height: 280px; object-fit: cover; width: 100%;">
                                    }
                                    else
                                    {
                                        <img src="~/images/img@((product.Id % 7) + 1).jpg" alt="@product.Name" class="product-image img-fluid rounded-top" style="height: 280px; object-fit: cover; width: 100%;">
                                    }
                                </a>
                                @if (product.DiscountPercent > 0)
                                {
                                    <div class="position-absolute top-0 end-0 m-3">
                                        <span class="badge bg-danger fs-6">-@product.DiscountPercent%</span>
                                    </div>
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="element-title text-uppercase fs-6 mb-2">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark">@product.Name</a>
                                </h5>
                                <p class="text-muted small mb-3" style="min-height: 40px;">@(product.Description?.Length > 60 ? product.Description.Substring(0, 60) + "..." : product.Description)</p>
                                
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            @if (product.DiscountPercent > 0)
                                            {
                                                // Safely cast nullable decimals to decimal
                                                decimal basePrice = product.BasePrice;
                                                decimal discountPercent = product.DiscountPercent ?? 0;

                                                // Correct formula for discounted price
                                                decimal finalPrice = basePrice * (1 - discountPercent / 100m);

                                                <div>
                                                    <span class="h5 text-primary mb-0">
                                                        $@finalPrice.ToString("F2")
                                                    </span>
                                                    <small class="text-muted text-decoration-line-through ms-2">
                                                        $@basePrice.ToString("F2")
                                                    </small>
                                                    <span class="badge bg-success ms-2">-@discountPercent%</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div>
                                                    <span class="h5 text-primary mb-0">
                                                        $@product.BasePrice
                                                    </span>
                                                </div>
                                            }


                                        </div>
                                    </div>
                                    
                                    @if (product.Stock > 0)
                                    {
                                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-dark w-100 text-uppercase btn-sm">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="white" class="me-1">
                                                <use xlink:href="#cart"></use>
                                            </svg>
                                            View Details
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary w-100 text-uppercase btn-sm" disabled>Out of Stock</button>
                                    }
                                    
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <div class="btn-group w-100 mt-2">
                                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <svg width="80" height="80" viewBox="0 0 24 24" class="text-muted">
                        <use xlink:href="#cart"></use>
                    </svg>
                </div>
                <h3 class="text-muted mb-3">No Products Found</h3>
                <p class="text-muted">We couldn't find any products matching your search.</p>
                <a asp-action="Index" class="btn btn-dark text-uppercase mt-3">View All Products</a>
            </div>
        }
    </div>
</section>

<!-- Featured Categories Section -->
@if (ViewBag.Categories != null)
{
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title text-uppercase">Shop by Category</h2>
                <p class="text-muted">Browse our complete tennis equipment collection</p>
            </div>
            <div class="row g-4">
                @if (ViewBag.Categories != null)
                {
                    var categories = ViewBag.Categories as IEnumerable<BussinessObject.ProductCategory>;
                    var categoryList = new List<BussinessObject.ProductCategory>();
                    if (categories != null)
                    {
                        categoryList = categories.ToList();
                    }
                    var imageIndex = 1;
                    var maxCategories = Math.Min(3, categoryList.Count);
                    
                    @for (int i = 0; i < maxCategories; i++)
                    {
                        var category = categoryList[i];
                        <div class="col-md-4">
                            <div class="category-card text-center p-4 border rounded shadow-sm h-100 hover-effect">
                                <div class="mb-3">
                                    <img src="~/images/cat-item@(imageIndex).jpg" alt="@category.Name" class="img-fluid rounded" style="height: 200px; object-fit: cover; width: 100%;">
                                </div>
                                <h4 class="text-uppercase mb-3">@category.Name</h4>
                                <p class="text-muted">@(category.Description ?? "Browse our collection")</p>
                                <a asp-action="Index" asp-route-categoryId="@category.Id" class="btn btn-outline-dark text-uppercase mt-2">Shop Now</a>
                            </div>
                        </div>
                        imageIndex++;
                    }
                }
            </div>
        </div>
    </section>
}

<style>
    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }
    .product-item .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .product-item .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 35px rgba(0,0,0,0.2) !important;
    }
</style>

<script>
    function sortProducts(sortBy) {
        const urlParams = new URLSearchParams(window.location.search);
        const categoryId = urlParams.get('categoryId');
        
        let url = '@Url.Action("Index", "Product")';
        const params = [];
        
        if (categoryId) {
            params.push('categoryId=' + categoryId);
        }
        if (sortBy) {
            params.push('sortBy=' + sortBy);
        }
        
        if (params.length > 0) {
            url += '?' + params.join('&');
        }
        
        window.location.href = url;
    }
</script>
