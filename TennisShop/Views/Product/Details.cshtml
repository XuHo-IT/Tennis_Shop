@model DataAccessLayer.Models.Product

@{
    ViewData["Title"] = "Product Details";
}
@inject Services.IImageKitService ImageKitService

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Product Details</h3>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            @if (Model.ProductImages != null && Model.ProductImages.Any())
                            {
                                <img src="@Model.ProductImages.First().ImageUrl" alt="@Model.Name" class="product-image img-fluid rounded">
                            }
                            else
                            {
                                <img src="~/images/img@((Model.Id % 7) + 1).jpg" alt="@Model.Name" class="product-image img-fluid rounded">
                            }
                        </div>
                        <div class="col-md-6">
                            <h2>@Model.Name</h2>
                            <p class="text-muted">@Model.Description</p>
                            
                            <div class="mb-3">
                                <h4 class="text-primary">$@Model.BasePrice.ToString("F2")</h4>
                                @if (Model.DiscountPercent > 0)
                                {
                                    <span class="badge bg-success fs-6">@Model.DiscountPercent% OFF</span>
                                }
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-6">
                                    <strong>Category:</strong> @Model.Category?.Name
                                </div>
                                <div class="col-sm-6">
                                    <strong>Brand:</strong> @Model.Brand?.Name
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-6">
                                    <strong>Stock:</strong> @Model.Stock
                                </div>
                                <div class="col-sm-6">
                                    <strong>Status:</strong> 
                                    <span class="badge @(Model.IsActive == true ? "bg-success" : "bg-danger")">
                                        @(Model.IsActive == true ? "Active" : "Inactive")
                                    </span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-12">
                                    <strong>Created:</strong> @Model.CreatedAt?.ToString("MMM dd, yyyy")
                                </div>
                            </div>

                            @if (Model.ProductVariants.Any())
                            {
                                <div class="mb-3">
                                    <h5>Variants</h5>
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>SKU</th>
                                                    <th>Color</th>
                                                    <th>Size</th>
                                                    <th>Price</th>
                                                    <th>Stock</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var variant in Model.ProductVariants)
                                                {
                                                    <tr>
                                                        <td>@variant.Sku</td>
                                                        <td>@variant.Color</td>
                                                        <td>@variant.Size</td>
                                                        <td>$@(variant.Price?.ToString("F2") ?? "0.00")</td>
                                                        <td>@variant.Stock</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
