@model BussinessObject.Product

@{
    ViewData["Title"] = Model.Name;
}
@inject Services.IImageKitService ImageKitService

<section class="py-5">
    <div class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Products</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>

        <div class="row g-5">
            <!-- Product Images -->
            <div class="col-md-6">
                <div class="product-image-section">
                    @if (Model.ProductImages != null && Model.ProductImages.Any())
                    {
                        <div class="main-image mb-3 position-relative">
                            <img src="@Model.ProductImages.First().ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-lg w-100" id="mainProductImage" style="object-fit: cover; max-height: 500px;">
                            @if (Model.DiscountPercent > 0)
                            {
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge bg-danger fs-4 px-4 py-2">SAVE @Model.DiscountPercent%</span>
                                </div>
                            }
                        </div>
                        @if (Model.ProductImages.Count() > 1)
                        {
                            <div class="row g-2">
                                @foreach (var image in Model.ProductImages.Take(4))
                                {
                                    <div class="col-3">
                                        <img src="@image.ImageUrl" alt="@Model.Name" class="img-fluid rounded thumbnail-image border" style="cursor: pointer; height: 100px; object-fit: cover; width: 100%;">
                                    </div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="main-image mb-3">
                            <img src="~/images/img@((Model.Id % 7) + 1).jpg" alt="@Model.Name" class="img-fluid rounded shadow-lg w-100" style="object-fit: cover; max-height: 500px;">
                        </div>
                    }
                </div>
            </div>

            <!-- Product Information -->
            <div class="col-md-6">
                <div class="product-info">
                    <!-- Admin Controls -->
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="alert alert-info d-flex justify-content-between align-items-center mb-4">
                            <span><i class="fas fa-shield-alt me-2"></i>Admin Mode</span>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Index" class="btn btn-sm btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back
                                </a>
                            </div>
                        </div>
                    }

                    <h1 class="product-title text-uppercase mb-3">@Model.Name</h1>

                    <!-- Rating -->
                    <div class="rating mb-3">
                        <span class="text-warning">
                            ★★★★★
                        </span>
                        <span class="text-muted ms-2">(<span id="reviewCount">@(ViewBag.Reviews?.Count ?? 0)</span>) reviews</span>
                    </div>

                    <!-- Price -->
                    <div class="price-section mb-4 pb-4 border-bottom">
                        @if (Model.DiscountPercent > 0)
                        {
                            var discountedPrice = Model.BasePrice * (1 - Model.DiscountPercent / 100m);
                            <div class="d-flex align-items-center gap-3">
                                <h2 class="text-primary mb-0">$@discountedPrice</h2>
                                <h4 class="text-muted text-decoration-line-through mb-0">
                                    $@Model.BasePrice.ToString("F2")
                                </h4>
                                <span class="badge bg-success fs-6 px-3 py-2">
                                    You Save: $@(Model.BasePrice - discountedPrice)
                                </span>
                            </div>
                        }
                        else
                        {
                            <h2 class="text-primary mb-0">$@Model.BasePrice</h2>
                        }
                    </div>

                    <!-- Description -->
                    <div class="description mb-4 pb-4 border-bottom">
                        <h5 class="text-uppercase mb-3">Product Description</h5>
                        <p class="text-muted lh-lg">@Model.Description</p>
                    </div>

                    <!-- Product Details -->
                    <div class="product-details mb-4 pb-4 border-bottom">
                        <h5 class="text-uppercase mb-3">Product Details</h5>
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="detail-item p-3 bg-light rounded">
                                    <small class="text-muted d-block">Category</small>
                                    <strong>@(Model.Category?.Name ?? "Uncategorized")</strong>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="detail-item p-3 bg-light rounded">
                                    <small class="text-muted d-block">Brand</small>
                                    <strong>@(Model.Brand?.Name ?? "Generic")</strong>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="detail-item p-3 bg-light rounded">
                                    <small class="text-muted d-block">Availability</small>
                                    @if (Model.Stock > 10)
                                    {
                                        <strong class="text-success"><i class="fas fa-check-circle"></i> In Stock (@Model.Stock units)</strong>
                                    }
                                    else if (Model.Stock > 0)
                                    {
                                        <strong class="text-warning"><i class="fas fa-exclamation-circle"></i> Low Stock (@Model.Stock units)</strong>
                                    }
                                    else
                                    {
                                        <strong class="text-danger"><i class="fas fa-times-circle"></i> Out of Stock</strong>
                                    }
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="detail-item p-3 bg-light rounded">
                                    <small class="text-muted d-block">Status</small>
                                    <strong class="@(Model.IsActive == true ? "text-success" : "text-danger")">
                                        @(Model.IsActive == true ? "Active" : "Inactive")
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Variants -->
                    @{
                        var hasVariants = Model.ProductVariants != null && Model.ProductVariants.Any();
                        List<BussinessObject.ProductVariant> allVariants = new List<BussinessObject.ProductVariant>();
                        List<BussinessObject.ProductVariant> availableVariants = new List<BussinessObject.ProductVariant>();
                        
                        if (hasVariants)
                        {
                            allVariants = Model.ProductVariants.ToList();
                            availableVariants = Model.ProductVariants.Where(v => (v.Stock ?? 0) > 0).ToList();
                        }
                        
                        // Calculate price with discount
                        decimal CalculatePrice(decimal basePrice)
                        {
                            if (Model.DiscountPercent.HasValue && Model.DiscountPercent > 0)
                            {
                                return basePrice * (1 - Model.DiscountPercent.Value / 100m);
                            }
                            return basePrice;
                        }
                        
                        var firstVariant = availableVariants.FirstOrDefault() ?? allVariants.FirstOrDefault();
                        decimal firstVariantPrice;
                        if (firstVariant != null && firstVariant.Price.HasValue)
                        {
                            // Use variant price, apply discount if needed
                            firstVariantPrice = CalculatePrice(firstVariant.Price.Value);
                        }
                        else
                        {
                            // Use base price with discount
                            firstVariantPrice = CalculatePrice(Model.BasePrice);
                        }
                        
                        var availableStock = hasVariants ? availableVariants.Sum(v => v.Stock ?? 0) : (Model.Stock ?? 0);
                    }

                    @if (hasVariants && allVariants.Any())
                    {
                        <div class="variants-section mb-4 pb-4 border-bottom">
                            <h5 class="text-uppercase mb-3">Available Options</h5>
                            <div class="row g-3">
                                @foreach (var variantItem in allVariants)
                                {
                                    var isSelected = variantItem.Id == firstVariant?.Id;
                                    var variantStock = variantItem.Stock ?? 0;
                                    var isAvailable = variantStock > 0;
                                    
                                    // Calculate variant price with discount
                                    decimal variantPrice;
                                    decimal originalVariantPrice;
                                    if (variantItem.Price.HasValue)
                                    {
                                        originalVariantPrice = variantItem.Price.Value;
                                        variantPrice = CalculatePrice(variantItem.Price.Value);
                                    }
                                    else
                                    {
                                        originalVariantPrice = Model.BasePrice;
                                        variantPrice = CalculatePrice(Model.BasePrice);
                                    }
                                    
                                    <div class="col-12">
                                        <div class="variant-option p-3 border rounded @(isSelected ? "border-dark border-3 selected-variant" : "border-secondary") @(!isAvailable ? "opacity-50" : "")" 
                                             data-variant-id="@variantItem.Id" 
                                             data-variant-price="@variantPrice"
                                             data-variant-stock="@variantStock"
                                             style="cursor: @(isAvailable ? "pointer" : "not-allowed"); transition: all 0.3s ease;"
                                             @(!isAvailable ? "onclick=\"return false;\"" : "")>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="flex-grow-1">
                                                    <strong class="@(isSelected ? "text-dark" : "")">
                                                        @(!string.IsNullOrEmpty(variantItem.Color) ? variantItem.Color : "Standard")
                                                        @(!string.IsNullOrEmpty(variantItem.Size) ? " - " + variantItem.Size : "")
                                                        @if (!isAvailable)
                                                        {
                                                            <span class="badge bg-danger ms-2">Out of Stock</span>
                                                        }
                                                    </strong>
                                                    <br>
                                                    <small class="text-muted">
                                                        Stock: @variantStock | 
                                                        Price: $@variantPrice.ToString("F2")
                                                        @if (Model.DiscountPercent > 0 && originalVariantPrice != variantPrice)
                                                        {
                                                            <span class="text-decoration-line-through text-muted ms-1">$@originalVariantPrice.ToString("F2")</span>
                                                        }
                                                    </small>
                                                </div>
                                                <div class="ms-3">
                                                    <input type="radio" name="selectedVariant" value="@variantItem.Id" 
                                                           @(isSelected ? "checked" : "") 
                                                           @(!isAvailable ? "disabled" : "")
                                                           class="form-check-input" style="width: 20px; height: 20px; cursor: pointer;">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Quantity & Add to Cart -->
                    <div class="add-to-cart-section mb-4">
                        @if ((hasVariants && availableStock > 0) || (!hasVariants && Model.Stock > 0))
                        {
                            <form asp-controller="Cart" asp-action="AddItem" method="post" id="addToCartForm">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <input type="hidden" id="selectedVariantId" name="variantId" value="@(hasVariants ? firstVariant?.Id : 0)" />
                                
                                <!-- Display Current Price -->
                                <div class="mb-3">
                                    @{
                                        var originalPrice = hasVariants && firstVariant?.Price.HasValue == true 
                                            ? firstVariant.Price.Value 
                                            : Model.BasePrice;
                                        var finalPrice = firstVariantPrice;
                                    }
                                    <div class="d-flex align-items-center gap-3">
                                        <h3 class="text-primary mb-0">
                                            <span id="displayPrice">$@finalPrice.ToString("F2")</span>
                                        </h3>
                                        @if (Model.DiscountPercent > 0)
                                        {
                                            <h5 class="text-muted text-decoration-line-through mb-0">
                                                $@originalPrice.ToString("F2")
                                            </h5>
                                            <span class="badge bg-success fs-6">
                                                Save @Model.DiscountPercent%
                                            </span>
                                        }
                                    </div>
                                    @if (hasVariants)
                                    {
                                        <small class="text-muted">
                                            <i class="fas fa-info-circle me-1"></i>Price based on selected variant
                                        </small>
                                    }
                                </div>
                                
                                <div class="row g-3">
                                    <div class="col-12 col-md-4">
                                        <label class="form-label text-uppercase fw-bold">Quantity</label>
                                        <div class="input-group">
                                            <button type="button" class="btn btn-outline-secondary" id="decreaseQty">-</button>
                                            <input type="number" name="quantity" id="quantityInput" class="form-control text-center" 
                                                   value="1" min="1" max="@(hasVariants ? (firstVariant?.Stock ?? 0) : (Model.Stock ?? 0))" required>
                                            <button type="button" class="btn btn-outline-secondary" id="increaseQty">+</button>
                                        </div>
                                        <small class="text-muted">Available: <span id="availableStock">@(hasVariants ? (firstVariant?.Stock ?? 0) : (Model.Stock ?? 0))</span></small>
                                    </div>
                                    <div class="col-12 col-md-8">
                                        <label class="form-label text-uppercase fw-bold d-block">&nbsp;</label>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <button type="submit" class="btn btn-dark btn-lg w-100" id="addToCartBtn">
                                                <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                                            </button>
                                        }
                                        else
                                        {
                                            <a asp-controller="Account" asp-action="Login" class="btn btn-dark btn-lg w-100">
                                                <i class="fas fa-sign-in-alt me-2"></i>Login to Add to Cart
                                            </a>
                                        }
                                    </div>
                                </div>
                                <div id="addToCartMessage" class="alert d-none mt-3"></div>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Out of Stock</strong> - This product is currently unavailable.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Customer Reviews Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title text-uppercase">Customer Reviews</h2>
            <div class="rating mb-3">
                <span class="text-warning fs-4">★★★★★</span>
                <span class="text-muted ms-2">(<span id="reviewCountBottom">@(ViewBag.Reviews?.Count ?? 0)</span>) reviews</span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 mx-auto">
                <!-- Add Review Form (hiển thị đầu tiên nếu đã đăng nhập) -->
                @if (User.Identity.IsAuthenticated)
                {
                    @if (ViewBag.CanReview == true)
                    {
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title mb-3">Write a Review</h5>
                                <form id="reviewForm">
                                    <input type="hidden" name="productId" value="@Model.Id" />
                                    <div class="mb-3">
                                        <label class="form-label">Rating <span class="text-danger">*</span></label>
                                        <select name="rating" id="ratingSelect" class="form-select" required>
                                            <option value="">Select rating...</option>
                                            <option value="5">★★★★★ (5 stars)</option>
                                            <option value="4">★★★★☆ (4 stars)</option>
                                            <option value="3">★★★☆☆ (3 stars)</option>
                                            <option value="2">★★☆☆☆ (2 stars)</option>
                                            <option value="1">★☆☆☆☆ (1 star)</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Your Review <span class="text-danger">*</span></label>
                                        <textarea name="comment" id="commentTextarea" class="form-control" rows="4" required placeholder="Share your experience with this product..."></textarea>
                                    </div>
                                    <div id="reviewMessage" class="alert d-none"></div>
                                    <button type="submit" class="btn btn-dark" id="submitReviewBtn">
                                        <i class="fas fa-paper-plane me-2"></i>Submit Review
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center mb-4">
                            <i class="fas fa-shopping-cart me-2"></i>
                            <strong>Bạn cần mua sản phẩm này trước khi có thể đánh giá.</strong>
                            <br />
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark mt-2">
                                <i class="fas fa-shopping-bag me-2"></i>Mua ngay
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info text-center mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        Please <a asp-controller="Account" asp-action="Login" class="alert-link">login</a> to write a review.
                    </div>
                }

                <!-- Reviews List Container -->
                <div id="reviewsList">
                    @if (ViewBag.Reviews != null && ((List<BussinessObject.ProductReview>)ViewBag.Reviews).Any())
                    {
                        foreach (var review in (List<BussinessObject.ProductReview>)ViewBag.Reviews)
                        {
                            <div class="review-item mb-3 p-4 border rounded bg-white">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h6 class="mb-1 fw-bold">@(!string.IsNullOrEmpty(review.full_name) ? review.full_name : "Anonymous")</h6>
                                        <div class="rating">
                                            <span class="text-warning">
                                                @for (int i = 0; i < review.Rating; i++)
                                                {
                                                    <text>★</text>
                                                }
                                                @for (int i = review.Rating; i < 5; i++)
                                                {
                                                    <text>☆</text>
                                                }
                                            </span>
                                        </div>
                                    </div>
                                    <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                                <p class="text-muted mb-0">@review.Comment</p>
                            </div>
                        }
                    }
                    else
                    {
                        <div id="noReviewsMessage" class="text-center text-muted py-5">
                            <i class="fas fa-comments fa-3x mb-3 text-secondary"></i>
                            <p class="fs-5">No reviews yet. Be the first to review!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Xử lý submit form review bằng AJAX
            $('#reviewForm').on('submit', function (e) {
                e.preventDefault();

                const $form = $(this);
                const $submitBtn = $('#submitReviewBtn');
                const $message = $('#reviewMessage');

                // Disable button và hiển thị loading
                $submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Submitting...');
                $message.addClass('d-none');

                // Lấy dữ liệu form
                const formData = {
                    productId: $('input[name="productId"]').val(),
                    rating: $('select[name="rating"]').val(),
                    comment: $('textarea[name="comment"]').val()
                };

                // Gửi AJAX request
                $.ajax({
                    url: '@Url.Action("AddReview", "Product")',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            // Tạo HTML cho review mới
                            const stars = '★'.repeat(response.review.rating) + '☆'.repeat(5 - response.review.rating);
                            const newReviewHtml = `
                                    <div class="review-item mb-3 p-4 border rounded bg-white animate-fade-in">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <h6 class="mb-1 fw-bold">${response.review.full_name}</h6>
                                                <div class="rating">
                                                    <span class="text-warning">${stars}</span>
                                                </div>
                                            </div>
                                            <small class="text-muted">${response.review.createdAt}</small>
                                        </div>
                                        <p class="text-muted mb-0">${response.review.comment}</p>
                                    </div>
                                `;

                            // Xóa thông báo "No reviews yet" nếu có
                            $('#noReviewsMessage').remove();

                            // Prepend review mới vào đầu danh sách
                            $('#reviewsList').prepend(newReviewHtml);

                            // Update review count
                            const currentCount = parseInt($('#reviewCount').text()) || 0;
                            const newCount = currentCount + 1;
                            $('#reviewCount').text(newCount);
                            $('#reviewCountBottom').text(newCount);

                            // Reset form
                            $form[0].reset();
                            $('#ratingSelect').val('');

                            // Hiển thị thông báo thành công
                            $message
                                .removeClass('d-none alert-danger')
                                .addClass('alert-success')
                                .html('<i class="fas fa-check-circle me-2"></i>Thank you! Your review has been submitted successfully.');

                            // Scroll đến review mới
                            $('html, body').animate({
                                scrollTop: $('#reviewsList').offset().top - 100
                            }, 500);

                            // Ẩn thông báo sau 5 giây
                            setTimeout(function () {
                                $message.fadeOut(function () {
                                    $(this).addClass('d-none').show();
                                });
                            }, 5000);

                        } else {
                            // Hiển thị lỗi
                            $message
                                .removeClass('d-none alert-success')
                                .addClass('alert-danger')
                                .html('<i class="fas fa-exclamation-circle me-2"></i>' + (response.message || 'Error submitting review. Please try again.'));
                        }
                    },
                    error: function (xhr, status, error) {
                        // Hiển thị lỗi
                        $message
                            .removeClass('d-none alert-success')
                            .addClass('alert-danger')
                            .html('<i class="fas fa-exclamation-circle me-2"></i>An error occurred. Please try again later.');
                        console.error('Error:', error);
                    },
                    complete: function () {
                        // Enable button trở lại
                        $submitBtn.prop('disabled', false).html('<i class="fas fa-paper-plane me-2"></i>Submit Review');
                    }
                });
            });

            // Xử lý click thumbnail images
            $('.thumbnail-image').on('click', function () {
                const newSrc = $(this).attr('src');
                $('#mainProductImage').attr('src', newSrc);
            });

            // Variant selection
            $('.variant-option').on('click', function() {
                // Check if variant is disabled (out of stock)
                if ($(this).find('input[type="radio"]').prop('disabled')) {
                    return false;
                }
                
                // Remove selection from all variants
                $('.variant-option').removeClass('border-dark border-3 selected-variant')
                                   .addClass('border-secondary')
                                   .removeClass('border-3');
                $('.variant-option strong').removeClass('text-dark');
                
                // Add selection to clicked variant
                $(this).removeClass('border-secondary')
                       .addClass('border-dark border-3 selected-variant');
                $(this).find('strong').addClass('text-dark');
                
                const variantId = $(this).data('variant-id');
                const variantPrice = $(this).data('variant-price');
                const variantStock = $(this).data('variant-stock') || 0;
                
                $('input[name="selectedVariant"]').prop('checked', false);
                $(this).find('input[type="radio"]').prop('checked', true);
                $('#selectedVariantId').val(variantId);
                $('#displayPrice').text('$' + parseFloat(variantPrice).toFixed(2));
                $('#quantityInput').attr('max', variantStock);
                $('#availableStock').text(variantStock);
                
                // Reset quantity if exceeds new max
                const currentQty = parseInt($('#quantityInput').val());
                if (currentQty > variantStock) {
                    $('#quantityInput').val(variantStock);
                }
            });

            // Quantity controls
            $('#increaseQty').on('click', function() {
                const currentQty = parseInt($('#quantityInput').val());
                const maxQty = parseInt($('#quantityInput').attr('max'));
                if (currentQty < maxQty) {
                    $('#quantityInput').val(currentQty + 1);
                }
            });

            $('#decreaseQty').on('click', function() {
                const currentQty = parseInt($('#quantityInput').val());
                if (currentQty > 1) {
                    $('#quantityInput').val(currentQty - 1);
                }
            });

            // Add to Cart form submission
            $('#addToCartForm').on('submit', function(e) {
                e.preventDefault();
                
                const $form = $(this);
                const $btn = $('#addToCartBtn');
                const $message = $('#addToCartMessage');
                const originalBtnText = $btn.html();
                
                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Adding...');
                $message.addClass('d-none');
                
                const formData = new FormData($form[0]);
                const token = $('input[name="__RequestVerificationToken"]').val();
                formData.set('__RequestVerificationToken', token);
                
                $.ajax({
                    url: '@Url.Action("AddItem", "Cart")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        if (response.success) {
                            $message
                                .removeClass('d-none alert-danger')
                                .addClass('alert-success')
                                .html('<i class="fas fa-check-circle me-2"></i>' + (response.message || 'Product added to cart successfully!'));
                            
                            // Update cart count if function exists
                            if (typeof loadCartCount === 'function') {
                                loadCartCount();
                            }
                            
                            // Reset form after 2 seconds
                            setTimeout(function() {
                                $form[0].reset();
                                $('#quantityInput').val(1);
                                $message.fadeOut();
                            }, 2000);
                        } else {
                            $message
                                .removeClass('d-none alert-success')
                                .addClass('alert-danger')
                                .html('<i class="fas fa-exclamation-circle me-2"></i>' + (response.message || 'Error adding product to cart.'));
                        }
                    },
                    error: function(xhr) {
                        let errorMsg = 'An error occurred. Please try again.';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        } else if (xhr.status === 401) {
                            errorMsg = 'Please login to add items to cart.';
                            window.location.href = '@Url.Action("Login", "Account")';
                            return;
                        }
                        $message
                            .removeClass('d-none alert-success')
                            .addClass('alert-danger')
                            .html('<i class="fas fa-exclamation-circle me-2"></i>' + errorMsg);
                    },
                    complete: function() {
                        $btn.prop('disabled', false).html(originalBtnText);
                    }
                });
            });
        });
    </script>

