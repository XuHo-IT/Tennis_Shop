@model BussinessObject.BlogPost

@{
    ViewData["Title"] = Model.Title;
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <article class="blog-post">
                    <div class="mb-4">
                        <a asp-action="Index" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-2"></i>Back to Blog
                        </a>
                    </div>

                    <div class="post-header mb-4">
                        <div class="mb-3">
                            <span class="badge bg-primary me-2">@Model.Category</span>
                            <span class="text-muted">@Model.CreatedAt?.ToString("MMMM dd, yyyy")</span>
                        </div>
                        <h1 class="display-4 mb-3">@Model.Title</h1>
                        <div class="d-flex align-items-center text-muted mb-4">
                            <i class="fas fa-user me-2"></i>
                            <span class="me-4">@Model.Author</span>
                            <i class="fas fa-eye me-2"></i>
                            <span>@(Model.Views ?? 0) views</span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="post-image mb-4">
                            <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Title" class="img-fluid rounded" style="width: 100%; height: 400px; object-fit: cover;">
                        </div>
                    }

                    <div class="post-content">
                        @Html.Raw(Model.Content)
                    </div>

                    <div class="post-footer mt-5 pt-4 border-top">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Category:</strong> <span class="badge bg-secondary">@Model.Category</span>
                            </div>
                            <div class="text-muted">
                                <small>Published: @Model.CreatedAt?.ToString("MMMM dd, yyyy")</small>
                            </div>
                        </div>
                    </div>
                </article>
            </div>

            <div class="col-lg-4">
                <aside class="blog-sidebar">
                    @if (ViewBag.RelatedPosts != null && ((IEnumerable<BussinessObject.BlogPost>)ViewBag.RelatedPosts).Any())
                    {
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-dark text-white">
                                <h5 class="mb-0">Related Posts</h5>
                            </div>
                            <div class="card-body">
                                @foreach (var relatedPost in ViewBag.RelatedPosts as IEnumerable<BussinessObject.BlogPost>)
                                {
                                    <div class="mb-3 pb-3 border-bottom">
                                        <h6 class="mb-2">
                                            <a asp-action="Details" asp-route-id="@relatedPost.Id" class="text-decoration-none">
                                                @relatedPost.Title
                                            </a>
                                        </h6>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>@relatedPost.CreatedAt?.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="card shadow-sm">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">Quick Links</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <a asp-controller="Product" asp-action="Index" class="text-decoration-none">
                                        <i class="fas fa-shopping-bag me-2"></i>Shop Products
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                                        <i class="fas fa-home me-2"></i>Home
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a asp-action="Index" class="text-decoration-none">
                                        <i class="fas fa-newspaper me-2"></i>All Blog Posts
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</section>

<style>
    .post-content {
        font-size: 1.1rem;
        line-height: 1.8;
    }
    .post-content h3 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: #333;
    }
    .post-content p {
        margin-bottom: 1.5rem;
    }
    .post-content ul {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
    }
    .post-content li {
        margin-bottom: 0.5rem;
    }
    .blog-sidebar .card {
        border-radius: 0.5rem;
    }
    .blog-sidebar a:hover {
        color: #007bff !important;
    }
</style>
