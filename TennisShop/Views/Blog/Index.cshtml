@model IEnumerable<BussinessObject.BlogPost>

@{
    ViewData["Title"] = "Tennis Blog";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <h1 class="section-title text-uppercase mb-3">Tennis Blog</h1>
            <p class="text-muted">Expert tips, guides, and insights for tennis players of all levels</p>
        </div>

        <div class="row g-4" data-aos="fade-up" data-aos-delay="200">
            @foreach (var post in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <article class="post-item h-100">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="post-image position-relative">
                                <a asp-action="Details" asp-route-id="@post.Id">
                                    <img src="@Url.Content(post.ImageUrl)" alt="@post.Title" class="card-img-top" style="height: 250px; object-fit: cover;">
                                </a>
                                <div class="position-absolute top-0 start-0 m-3">
                                    <span class="badge bg-primary">@post.Category</span>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <div class="post-meta text-uppercase fs-6 text-secondary mb-2">
                                    <span class="post-category">@post.Category</span>
                                    <span class="meta-day"> â€¢ @post.CreatedAt?.ToString("MMM dd, yyyy")</span>
                                </div>
                                <h5 class="post-title text-uppercase mb-3">
                                    <a asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none text-dark">
                                        @post.Title
                                    </a>
                                </h5>
                                <p class="text-muted mb-3 flex-grow-1">@post.Excerpt</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted small">
                                        <i class="fas fa-user me-1"></i>@post.Author
                                    </div>
                                    <div class="text-muted small">
                                        <i class="fas fa-eye me-1"></i>@(post.Views ?? 0) views
                                    </div>
                                </div>
                                <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-outline-dark text-uppercase mt-3">
                                    Read More <i class="fas fa-arrow-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </article>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-newspaper fa-4x text-muted"></i>
                </div>
                <h3 class="text-muted mb-3">No Blog Posts Found</h3>
                <p class="text-muted">Check back soon for new tennis tips and guides!</p>
            </div>
        }
    </div>
</section>

<style>
    .post-item .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .post-item .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }
    .post-item a {
        transition: color 0.3s ease;
    }
    .post-item a:hover {
        color: #007bff !important;
    }
</style>
