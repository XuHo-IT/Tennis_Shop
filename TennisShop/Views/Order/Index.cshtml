@model IEnumerable<DataAccessLayer.Models.Order>
@{
    ViewData["Title"] = "My Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">My Orders</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">You have no orders yet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Order #</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate?.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <span class="badge bg-secondary text-uppercase">@order.Status</span>
                    </td>
                    <td>$@(order.TotalAmount ?? 0m).ToString("0.00")</td>
                    <td>
                        <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}


