@model IEnumerable<BussinessObject.User>
@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <h2 class="h3 mb-1"><i class="fas fa-users me-2"></i>Users Management</h2>
        <p class="text-muted mb-0">Manage user accounts and permissions</p>
    </div>

    <!-- Stats Summary -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Total Users</p>
                            <h4 class="mb-0 fw-bold">@Model.Count()</h4>
                        </div>
                        <div class="fs-2 text-black-50">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Administrators</p>
                            <h4 class="mb-0 fw-bold">@Model.Count(u => u.Role?.Name == "Admin")</h4>
                        </div>
                        <div class="fs-2 text-black-50">
                            <i class="fas fa-user-shield"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Regular Users</p>
                            <h4 class="mb-0 fw-bold">@Model.Count(u => u.Role?.Name == "User")</h4>
                        </div>
                        <div class="fs-2 text-black-50">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card admin-card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table admin-table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td><strong>@user.Id</strong></td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@(user.Phone ?? "N/A")</td>
                                <td>
                                    <span class="badge bg-@(user.Role?.Name == "Admin" ? "danger" : "primary")">
                                    <span class="badge bg-@(user.Role?.Name == "Admin" ? "danger" : "primary")">
                                        @user.Role?.Name
                                    </span>
                                </td>
                                <td>@user.CreatedAt?.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" 
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        
                                        <!-- Role Change Dropdown -->
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-info dropdown-toggle" 
                                                    data-bs-toggle="dropdown">
                                                <i class="fas fa-user-tag"></i> Role
                                            </button>
                                            <div class="dropdown-menu">
                                                <form method="post" action="@Url.Action("ChangeUserRole", "Admin", new { id = user.Id })">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="roleId" value="1" />
                                                    <button type="submit" class="dropdown-item @(user.RoleId == 1 ? "active" : "")">
                                                        <i class="fas fa-crown"></i> Admin
                                                    </button>
                                                </form>
                                                <form method="post" action="@Url.Action("ChangeUserRole", "Admin", new { id = user.Id })">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="roleId" value="2" />
                                                    <button type="submit" class="dropdown-item @(user.RoleId == 2 ? "active" : "")">
                                                        <i class="fas fa-user"></i> User
                                                    </button>
                                                </form>
                                            </div>
                                        </div>

                                        <!-- Delete Button -->
                                        <form method="post" action="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" 
                                              onsubmit="return confirm('Are you sure you want to delete this user?')" 
                                              style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
