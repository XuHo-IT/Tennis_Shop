@model IEnumerable<BussinessObject.User>
@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var totalUsers = Model.Count();
    var adminCount = Model.Count(u => (u.Role?.Name ?? "Customer").Equals("Admin", StringComparison.OrdinalIgnoreCase));
    var customerCount = totalUsers - adminCount;
}

<div class="container-fluid px-4 py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-heading mb-1">Users Management</h2>
            <p class="text-muted mb-0">Manage user accounts and permissions</p>
        </div>
        <a asp-controller="Account" asp-action="Register" class="btn btn-dark">
            <i class="fas fa-user-plus me-2"></i>Add New User
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon bg-primary">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-label">Total Users</div>
                    <div class="stat-value">@totalUsers</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon bg-danger">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-label">Administrators</div>
                    <div class="stat-value">@adminCount</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon bg-success">
                    <i class="fas fa-user"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-label">Customers</div>
                    <div class="stat-value">@customerCount</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Search -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" id="userSearch" class="form-control" placeholder="Search by name, email, phone...">
                    </div>
                </div>
                <div class="col-md-2">
                    <select id="roleFilter" class="form-select">
                        <option value="all">All Roles</option>
                        <option value="admin">Admin</option>
                        <option value="user">Customer</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select id="joinFilter" class="form-select">
                        <option value="all">All Time</option>
                        <option value="recent">Last 30 Days</option>
                        <option value="older">Older</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-secondary w-100" onclick="clearFilters()">
                        <i class="fas fa-redo me-2"></i>Reset
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">User Directory</h5>
                    <small class="text-muted">Sorted by creation date Â· <span id="visibleCount">@totalUsers</span> visible</small>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table modern-table align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="width: 50px;">
                                <input type="checkbox" class="form-check-input" id="selectAll">
                            </th>
                            <th>User</th>
                            <th>Contacts</th>
                            <th>Tags</th>
                            <th>Join Info</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.OrderByDescending(u => u.CreatedAt))
                        {
                            var roleDisplay = string.IsNullOrWhiteSpace(user.Role?.Name) ? "Customer" : user.Role.Name;
                            var roleKey = roleDisplay.Equals("Admin", StringComparison.OrdinalIgnoreCase) ? "admin" : "user";
                            var createdDate = user.CreatedAt ?? DateTime.MinValue;
                            var isNew = (DateTime.UtcNow - createdDate).TotalDays <= 30;
                            var initials = string.Join("", (user.FullName ?? "U").Split(" ", StringSplitOptions.RemoveEmptyEntries).Take(2).Select(s => s[0])).ToUpper();
                            var searchBlob = $"{user.FullName} {user.Email} {user.Phone} {roleDisplay}".ToLower();
                            
                            <tr data-user-row 
                                data-role="@roleKey" 
                                data-joined="@createdDate.ToString("yyyy-MM-dd")" 
                                data-search="@searchBlob">
                                <td>
                                    <input type="checkbox" class="form-check-input row-checkbox">
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="user-avatar">@initials</div>
                                        <div>
                                            <div class="fw-semibold">@user.FullName</div>
                                            <small class="text-muted">@(user.Address ?? "No address")</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="contact-info">
                                        <div><i class="far fa-envelope me-2"></i>@user.Email</div>
                                        <div><i class="fas fa-phone me-2"></i>@(user.Phone ?? "N/A")</div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge-tag @(roleKey == "admin" ? "badge-danger" : "badge-primary")">
                                        <i class="fas fa-user-shield me-1"></i>@roleDisplay
                                    </span>
                                    @if (isNew)
                                    {
                                        <span class="badge-tag badge-success">New</span>
                                    }
                                </td>
                                <td>
                                    <div class="fw-semibold">@user.CreatedAt?.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">at @user.CreatedAt?.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <span class="status-badge status-active">Active</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" 
                                           class="btn-action btn-action-edit" title="Edit">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <div class="btn-group">
                                            <button type="button" class="btn-action btn-action-more dropdown-toggle" 
                                                    data-bs-toggle="dropdown" title="More">
                                                <i class="fas fa-user-cog"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <form method="post" action="@Url.Action("ChangeUserRole", "Admin", new { id = user.Id })">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="roleId" value="1" />
                                                        <button type="submit" class="dropdown-item @(user.RoleId == 1 ? "active" : "")">
                                                            <i class="fas fa-crown me-2"></i>Set Admin
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" action="@Url.Action("ChangeUserRole", "Admin", new { id = user.Id })">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="roleId" value="2" />
                                                        <button type="submit" class="dropdown-item @(user.RoleId == 2 ? "active" : "")">
                                                            <i class="fas fa-user me-2"></i>Set Customer
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                        <form method="post" action="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" 
                                              class="d-inline" onsubmit="return confirm('Delete this user?')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn-action btn-action-delete" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div id="emptyState" class="empty-state d-none">
                <i class="fas fa-user-slash fa-3x mb-3"></i>
                <h5>No users found</h5>
                <p class="text-muted">Try adjusting your filters</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('userSearch');
    const roleFilter = document.getElementById('roleFilter');
    const joinFilter = document.getElementById('joinFilter');
    const rows = Array.from(document.querySelectorAll('[data-user-row]'));
    const emptyState = document.getElementById('emptyState');
    const visibleCount = document.getElementById('visibleCount');
    const selectAll = document.getElementById('selectAll');

    function applyFilters() {
        const query = searchInput.value.trim().toLowerCase();
        const role = roleFilter.value;
        const join = joinFilter.value;
        const now = new Date();
        let matches = 0;

        rows.forEach(row => {
            const matchRole = role === 'all' || row.dataset.role === role;
            const matchSearch = !query || row.dataset.search.includes(query);
            let matchJoin = true;

            if (join !== 'all') {
                const joinDate = new Date(row.dataset.joined);
                const days = (now - joinDate) / (1000 * 60 * 60 * 24);
                matchJoin = join === 'recent' ? days <= 30 : days > 30;
            }

            const show = matchRole && matchSearch && matchJoin;
            row.style.display = show ? '' : 'none';
            if (show) matches++;
        });

        visibleCount.textContent = matches;
        emptyState.classList.toggle('d-none', matches > 0);
    }

    searchInput.addEventListener('input', applyFilters);
    roleFilter.addEventListener('change', applyFilters);
    joinFilter.addEventListener('change', applyFilters);

    selectAll.addEventListener('change', () => {
        document.querySelectorAll('.row-checkbox').forEach(cb => cb.checked = selectAll.checked);
    });

    window.clearFilters = function() {
        searchInput.value = '';
        roleFilter.value = 'all';
        joinFilter.value = 'all';
        applyFilters();
    };

    applyFilters();
});
</script>
}
