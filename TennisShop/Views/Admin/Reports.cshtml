@model TennisShop.Controllers.AdminReportsViewModel
@{
    ViewData["Title"] = "Reports & Analytics";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="h3 mb-4"><i class="fas fa-chart-bar me-2"></i>Reports & Analytics</h2>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-lg-4 mb-4">
            <div class="card admin-card stat-card success h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted text-uppercase fw-bold small mb-1">Total Revenue</div>
                            <div class="h3 mb-0 fw-bold text-success">$@Model.TotalRevenue.ToString("N2")</div>
                        </div>
                        <i class="fas fa-dollar-sign fa-3x stat-icon"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card admin-card stat-card info h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted text-uppercase fw-bold small mb-1">Total Orders</div>
                            <div class="h3 mb-0 fw-bold text-info">@Model.TotalOrders</div>
                        </div>
                        <i class="fas fa-shopping-cart fa-3x stat-icon"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card admin-card stat-card warning h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted text-uppercase fw-bold small mb-1">Average Order Value</div>
                            <div class="h3 mb-0 fw-bold text-warning">$@Model.AverageOrderValue.ToString("F2")</div>
                        </div>
                        <i class="fas fa-chart-line fa-3x stat-icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-lg-12 mb-4">
            <div class="card admin-card">
                <div class="card-header admin-card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-area me-2"></i>Revenue by Month</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Selling Products -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card admin-card">
                <div class="card-header admin-card-header">
                    <h5 class="mb-0"><i class="fas fa-trophy me-2"></i>Top Selling Products</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopSellingProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table admin-table table-hover">
                                <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Product</th>
                                        <th>Category</th>
                                        <th>Brand</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{var rank = 1;}
                                    @foreach (var product in Model.TopSellingProducts)
                                    {
                                        <tr>
                                            <td>
                                                @if (rank <= 3)
                                                {
                                                    <span class="badge bg-@(rank == 1 ? "warning" : rank == 2 ? "secondary" : "danger")">
                                                        <i class="fas fa-trophy"></i> #@rank
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">#@rank</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (product.ProductImages != null && product.ProductImages.Any())
                                                    {
                                                        <img src="@product.ProductImages.First().ImageUrl" 
                                                             alt="@product.Name" 
                                                             class="me-3" 
                                                             style="width: 40px; height: 40px; object-fit: cover; border-radius: 0.25rem;">
                                                    }
                                                    <strong>@product.Name</strong>
                                                </div>
                                            </td>
                                            <td>@product.Category?.Name</td>
                                            <td>@product.Brand?.Name</td>
                                            <td>$@product.BasePrice.ToString("F2")</td>
                                            <td>
                                                @{
                                                    var stockClass = product.Stock > 50 ? "success" : product.Stock > 20 ? "warning" : "danger";
                                                }
                                                <span class="badge bg-@stockClass">@product.Stock</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-@(product.IsActive == true ? "success" : "secondary")">
                                                    @(product.IsActive == true ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                        </tr>
                                        rank++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-chart-bar fa-4x text-muted mb-3"></i>
                            <p class="text-muted">No sales data available yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@@section Scripts {
    <script>
        // Revenue Chart
        const ctx = document.getElementById('revenueChart').getContext('2d');
        const revenueData = @Html.Raw(Json.Serialize(Model.RevenueByMonth));
        
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: revenueData.map(d => d.month),
                datasets: [{
                    label: 'Revenue ($)',
                    data: revenueData.map(d => d.revenue),
                    borderColor: 'rgb(78, 115, 223)',
                    backgroundColor: 'rgba(78, 115, 223, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 5,
                    pointHoverRadius: 7,
                    pointBackgroundColor: 'rgb(78, 115, 223)',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0,0,0,0.8)',
                        padding: 12,
                        titleFont: { size: 14 },
                        bodyFont: { size: 13 },
                        callbacks: {
                            label: function(context) {
                                return 'Revenue: $' + context.parsed.y.toFixed(2);
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return '$' + value.toFixed(0);
                            }
                        },
                        grid: {
                            color: 'rgba(0,0,0,0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
    </script>
}

