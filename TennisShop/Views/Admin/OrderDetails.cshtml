@model BussinessObject.Order
@{
    ViewData["Title"] = $"Order #{Model.Id} Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a asp-action="Orders" class="btn btn-outline-secondary mb-2">
                <i class="fas fa-arrow-left"></i> Back to Orders
            </a>
            <h2 class="h3 mb-0">Order #@Model.Id</h2>
        </div>
        <div>
            @{
                var badgeClass = Model.Status?.ToLower() switch
                {
                    "pending" => "bg-warning text-dark",
                    "processing" => "bg-info",
                    "shipped" => "bg-primary",
                    "completed" => "bg-success",
                    "cancelled" => "bg-danger",
                    _ => "bg-secondary"
                };
            }
            <span class="badge @badgeClass fs-6">
                @Model.Status
            </span>
        </div>
    </div>

    <div class="row">
        <!-- Order Information -->
        <div class="col-lg-8">
            <!-- Order Items -->
            <div class="card admin-card mb-4">
                <div class="card-header admin-card-header">
                    <h5 class="mb-0"><i class="fas fa-box me-2"></i>Order Items</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Variant</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (item.Product?.ProductImages != null && item.Product.ProductImages.Any())
                                                {
                                                    <img src="@item.Product.ProductImages.First().ImageUrl" 
                                                         alt="@item.Product.Name" 
                                                         class="me-3" 
                                                         style="width: 50px; height: 50px; object-fit: cover; border-radius: 0.25rem;">
                                                }
                                                <div>
                                                    <strong>@item.Product?.Name</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.Variant != null)
                                            {
                                                <span class="badge bg-secondary">@item.Variant.Color / @item.Variant.Size</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">@item.Quantity</span>
                                        </td>
                                        <td class="text-end">$@item.Price.ToString("F2")</td>
                                        <td class="text-end"><strong>$@((item.Price * item.Quantity).ToString("F2"))</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                    <td class="text-end"><h5 class="mb-0 text-success">$@Model.TotalAmount?.ToString("F2")</h5></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Shipping Information -->
            <div class="card admin-card">
                <div class="card-header admin-card-header">
                    <h5 class="mb-0"><i class="fas fa-shipping-fast me-2"></i>Shipping Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Address:</strong></p>
                            <p class="text-muted">@Model.ShippingAddress</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Phone:</strong></p>
                            <p class="text-muted">@Model.Phone</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary & Actions -->
        <div class="col-lg-4">
            <!-- Customer Information -->
            <div class="card admin-card mb-4">
                <div class="card-header admin-card-header">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Customer</h5>
                </div>
                <div class="card-body">
                    @if (Model.User != null)
                    {
                        <p><strong>Name:</strong><br />@Model.User.FullName</p>
                        <p><strong>Email:</strong><br />@Model.User.Email</p>
                        <p><strong>Phone:</strong><br />@Model.User.Phone</p>
                    }
                    else
                    {
                        <p class="text-muted">Guest Customer</p>
                    }
                </div>
            </div>

            <!-- Order Summary -->
            <div class="card admin-card mb-4">
                <div class="card-header admin-card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Order Summary</h5>
                </div>
                <div class="card-body">
                    <p><strong>Order Date:</strong><br />@Model.OrderDate?.ToString("MMMM dd, yyyy hh:mm tt")</p>
                    <p><strong>Total Items:</strong><br />@Model.OrderItems.Count</p>
                    <p><strong>Total Amount:</strong><br /><span class="h4 text-success">$@Model.TotalAmount?.ToString("F2")</span></p>
                </div>
            </div>

            <!-- Status Update -->
            <div class="card admin-card">
                <div class="card-header admin-card-header">
                    <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Update Status</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateOrderStatus" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="orderId" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Change order status:</label>
                            <select name="status" class="form-select" required>
                                <option value="pending" selected="@(Model.Status == "pending")">Pending</option>
                                <option value="processing" selected="@(Model.Status == "processing")">Processing</option>
                                <option value="shipped" selected="@(Model.Status == "shipped")">Shipped</option>
                                <option value="completed" selected="@(Model.Status == "completed")">Completed</option>
                                <option value="cancelled" selected="@(Model.Status == "cancelled")">Cancelled</option>
                            </select>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check"></i> Update Status
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

