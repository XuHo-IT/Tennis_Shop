@model DataAccessLayer.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="text-center mb-5">
                    <h1 class="section-title text-uppercase mb-3">My Profile</h1>
                    <p class="text-muted">Manage your account information</p>
                </div>

                <div class="row g-4">
                    <!-- Profile Information -->
                    <div class="col-md-8">
                        <div class="card border-0 shadow-lg">
                            <div class="card-header bg-dark text-white py-3">
                                <h4 class="mb-0 text-uppercase">Personal Information</h4>
                            </div>
                            <div class="card-body p-4">
                                <div class="row mb-4 pb-3 border-bottom">
                                    <div class="col-sm-4">
                                        <strong class="text-uppercase text-muted">Full Name</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="mb-0 fs-5">@Model.FullName</p>
                                    </div>
                                </div>
                                
                                <div class="row mb-4 pb-3 border-bottom">
                                    <div class="col-sm-4">
                                        <strong class="text-uppercase text-muted">Email Address</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="mb-0 fs-5">
                                            <i class="fas fa-envelope text-primary me-2"></i>@Model.Email
                                        </p>
                                    </div>
                                </div>
                                
                                <div class="row mb-4 pb-3 border-bottom">
                                    <div class="col-sm-4">
                                        <strong class="text-uppercase text-muted">Phone Number</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="mb-0 fs-5">
                                            <i class="fas fa-phone text-primary me-2"></i>@(Model.Phone ?? "Not provided")
                                        </p>
                                    </div>
                                </div>
                                
                                <div class="row mb-4 pb-3 border-bottom">
                                    <div class="col-sm-4">
                                        <strong class="text-uppercase text-muted">Address</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="mb-0 fs-5">
                                            <i class="fas fa-map-marker-alt text-primary me-2"></i>@(Model.Address ?? "Not provided")
                                        </p>
                                    </div>
                                </div>
                                
                                <div class="row mb-4 pb-3 border-bottom">
                                    <div class="col-sm-4">
                                        <strong class="text-uppercase text-muted">Account Type</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <span class="badge bg-primary fs-6 px-3 py-2">@(Model.Role?.Name ?? "Customer")</span>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-sm-4">
                                        <strong class="text-uppercase text-muted">Member Since</strong>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="mb-0 fs-5">
                                            <i class="fas fa-calendar text-primary me-2"></i>@Model.CreatedAt?.ToString("MMMM dd, yyyy")
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-white border-top py-3">
                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" class="btn btn-dark text-uppercase flex-grow-1">
                                        <i class="fas fa-edit me-2"></i>Edit Profile
                                    </a>
                                    <form asp-action="Logout" method="post" class="flex-grow-1">
                                        <button type="submit" class="btn btn-outline-danger text-uppercase w-100">
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Stats & Actions -->
                    <div class="col-md-4">
                        <div class="card border-0 shadow-lg mb-4">
                            <div class="card-header bg-dark text-white py-3">
                                <h5 class="mb-0 text-uppercase">Account Overview</h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="text-center mb-4 pb-3 border-bottom">
                                    <div class="mb-3">
                                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                                    </div>
                                    <h5 class="mb-1">@Model.FullName</h5>
                                    <p class="text-muted mb-0">@(Model.Role?.Name ?? "Customer")</p>
                                </div>
                                
                                <div class="mb-3 p-3 bg-light rounded">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-muted">Total Orders</span>
                                        <strong class="h4 mb-0">0</strong>
                                    </div>
                                </div>
                                
                                <div class="mb-3 p-3 bg-light rounded">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-muted">Wishlist Items</span>
                                        <strong class="h4 mb-0">0</strong>
                                    </div>
                                </div>
                                
                                <div class="p-3 bg-light rounded">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-muted">Loyalty Points</span>
                                        <strong class="h4 mb-0 text-primary">0</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-lg">
                            <div class="card-header bg-dark text-white py-3">
                                <h5 class="mb-0 text-uppercase">Quick Actions</h5>
                            </div>
                            <div class="card-body p-3">
                                <div class="d-grid gap-2">
                                    <a href="#" class="btn btn-outline-dark text-uppercase">
                                        <i class="fas fa-shopping-bag me-2"></i>My Orders
                                    </a>
                                    <a href="#" class="btn btn-outline-dark text-uppercase">
                                        <i class="fas fa-heart me-2"></i>My Wishlist
                                    </a>
                                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark text-uppercase">
                                        <i class="fas fa-shopping-cart me-2"></i>Continue Shopping
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
