@model DataAccessLayer.Models.User

@{
    ViewData["Title"] = "Register";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow-lg">
                    <div class="card-header bg-dark text-white text-center py-4">
                        <h3 class="mb-0 text-uppercase">Create Account</h3>
                    </div>
                    <div class="card-body p-5">
                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="FullName" class="form-label text-uppercase fw-bold">Full Name</label>
                                        <input asp-for="FullName" class="form-control form-control-lg" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="Email" class="form-label text-uppercase fw-bold">Email</label>
                                        <input asp-for="Email" class="form-control form-control-lg" type="email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="Phone" class="form-label text-uppercase fw-bold">Phone</label>
                                        <input asp-for="Phone" class="form-control form-control-lg" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="PasswordHash" class="form-label text-uppercase fw-bold">Password</label>
                                        <input asp-for="PasswordHash" class="form-control form-control-lg" type="password" />
                                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <label asp-for="Address" class="form-label text-uppercase fw-bold">Address</label>
                                <textarea asp-for="Address" class="form-control form-control-lg" rows="3"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-dark btn-lg text-uppercase">Register</button>
                            </div>
                        </form>
                        
                        <div class="text-center">
                            <p class="mb-0">Already have an account? <a asp-action="Login" class="text-decoration-none fw-bold">Login here</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
